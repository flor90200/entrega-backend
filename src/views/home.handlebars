<div class="card">
  <h2>{{user.first_name}} {{user.last_name}}</h2>
  <p><a href="/profile">{{user.email}}</a></p>
  <p>Role: {{user.role}}</p>
  <p> Mi Carrito: <a href="/carts/{{user.cart}}">{{user.cart}}</a> </p>
