<h1>Lista de productos</h1>

{{#each products}}
<div class="carts">
<h2>{{this.nombre}}</h2>
<p>{{this.stock}}</p>
<h4>{{this.precio}}</h4>
<p>{{this.descripcion}}</p>
</div>

<form id="formProduct">
    <h2>Compra</h2>
    <input class="controls" type="text" name="title" id="title" placeholder="Ingrese Nombre del Producto" required>
    <input class="controls" type="number" name="stock" id="stock" placeholder="Ingrese cuantos quiere" required>
    <input class="controls" type="number" name="price" id="price" placeholder="ingrese su monto" required>
    <button class="botons" type="submit" id="add-btn" >Registrar </button>
    <h2> Para eliminar un producto:</h2>
    <input class="controls" type="text" name="id-prod" id="id-prod" placeholder="Ingrese ID" >
   <button class="botons" type="button" id="delete-btn">Eliminar</button>

  </form>


 <div id="contenedor">

    </div>
{{/each}}